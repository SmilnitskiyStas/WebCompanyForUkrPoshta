@model FilterRequestDto

<div class="row pb-3">
    <div class="col-12 text-center">
        <span class="text-center fs-4">Filters</span>
    </div>
    <div class="col-12">
        <form method="post">
            
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="CountryName" class="form-select" asp-items="@ViewBag.Countries">
                    <option disabled selected>---Select Country---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="CityName" class="form-select" asp-items="@ViewBag.Cities">
                    <option disabled selected>---Select City---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="JobName" class="form-select" asp-items="@ViewBag.Jobs">
                    <option disabled selected>---Select Job---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="PhoneNumber" class="form-select" asp-items="@ViewBag.PhoneNmbs">
                    <option disabled selected>---Select PhoneNmb---</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="EmployeeName" class="form-select" asp-items="@ViewBag.Employees">
                    <option disabled selected>---Select Employee---</option>
                </select>
            </div>
        </form>
    </div>
</div>