@model EmployeeDto

<form asp-action="UserEdit">
    <br />
    <div class="container border p-3">
        <h1 class="text-black text-center">Edit Employee</h1>
        <hr />
        <div class="row">
            <div class="col-10 pb-3" hidden>
                <input asp-for="EmployeeId" value="@Model.EmployeeId" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Sur name:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SurName" class="form-control"/>
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">First name:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Last name:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Birth date:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Start to wort date:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StartWorkDate" class="form-control" />
                <span asp-validation-for="StartWorkDate" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size: 20px;">Salary:</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Salary_in_UAH" class="form-control" />
                <span asp-validation-for="Salary_in_UAH" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Edit" class="btn btn-success form-control"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}