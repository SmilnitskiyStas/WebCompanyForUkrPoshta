@model FilterRequestDto;

<div class="col-12">
    <form method="post">
        <div class="row">
            <div hidden>
                <input asp-for="CompanyName" value="@Model.CompanyName" />
                <input asp-for="CountryName" value="@Model.CountryName" />
                <input asp-for="CityName" value="@Model.CityName" />
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" />
                <input asp-for="JobName" value="@Model.JobName" />
                <input asp-for="EmployeeName" value="@Model.EmployeeName" />
            </div>
            <div class="col-sm-7">
                <select asp-for="DepartmentName" class="form-select" asp-items="@ViewBag.Departments">
                    @if (Model.DepartmentName is null)
                    {
                        <option disabled selected>---Select Department---</option>
                    }
                    else
                    {
                        <option disabled selected>@Model.DepartmentName</option>
                    }
                </select>
            </div>
            <div class="col-sm-5">
                <button type="submit" class="form-control btn btn-success" value="Submit">Add Filters</button>
            </div>
        </div>
    </form>
</div>