@model FilterRequestDto;

<div class="col-12">
    <form method="post">
        <div class="row">
            <div class="col-sm-7" hidden>
                <input asp-for="DepartmentName" value="@Model.DepartmentName" />
                <input asp-for="CompanyName" value="@Model.CompanyName" />
                <input asp-for="CountryName" value="@Model.CountryName" />
                <input asp-for="JobName" value="@Model.JobName" />
                <input asp-for="CityName" value="@Model.CityName" />
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" />
            </div>
            <div class="col-sm-7">
                <select asp-for="EmployeeName" class="form-select" asp-items="@ViewBag.Employees">
                    @if (Model.EmployeeName is null)
                    {
                        <option disabled selected>---Select Employee---</option>
                    }
                    else
                    {
                        <option disabled selected>@Model.EmployeeName</option>
                    }
                </select>
            </div>
            <div class="col-sm-5">
                <button type="submit" class="form-control btn btn-success" value="Submit">Add Filters</button>
            </div>
        </div>
    </form>
</div>